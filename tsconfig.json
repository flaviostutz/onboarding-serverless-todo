{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "noImplicitReturns": false,
    "noImplicitAny": true,
    "rootDir": ".",
    "target": "esnext",
    "module": "esnext",
    "watch": false,
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
  },
  "scripts": {
    "slug": "slug.ts",
    "test": "jest",
    "slugJs": "slug.cjs"
  },
  "include": [
    "src/**/*",
    "slug.ts",
    "unit.test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public_html",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
 ]
}